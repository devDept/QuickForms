<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <SolidColorBrush x:Key="AppBackground" Color="#212127" />

    <SolidColorBrush x:Key="TextBrush" Color="WhiteSmoke" />

    <Color x:Key="Swatch1C">#2A2A32</Color>
    <Color x:Key="Swatch2C">#40404C</Color>
    <Color x:Key="Swatch3C">#565666</Color>
    <Color x:Key="Swatch4C">#6B6B7E</Color>

    <SolidColorBrush x:Key="Swatch1" Color="#2A2A32" />
    <SolidColorBrush x:Key="Swatch2" Color="#40404C" />
    <SolidColorBrush x:Key="Swatch3" Color="#565666" />
    <SolidColorBrush x:Key="Swatch4" Color="#6B6B7E" />

    <FontFamily x:Key="WindowFont">Calibri</FontFamily>
    <system:Double x:Key="WindowFontSize">11</system:Double>

    <CornerRadius x:Key="CornerRadius">2</CornerRadius>

</ResourceDictionary>